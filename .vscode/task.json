{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with SFML",
            "type": "shell",
            "command": "g++",
            "args": [
                "-IC:/SFML-2.6.1/include",        
                "-LC:/SFML-2.6.1/lib",            
                "-lsfml-graphics",                 
                "-lsfml-window",
                "-lsfml-system",
                "src/main.cpp",                    
                "-o", "game.exe"           
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
